<h1><%=@sneaker.model%></h1>

<p><%=@sneaker.size%></p>
<p><%=@sneaker.brand%></p>
<p><%=@sneaker.condition%></p>
<p><%=@sneaker.price%></p>
<p><%=@sneaker.amount%></p>
<p><%=@sneaker.description%></p>
<% @sneaker.photos.each do |sneaker| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

 <% if @sneaker.user == current_user %>
  <%= link_to "Delete", sneaker_path(@sneaker), method: :delete,  data: { confirm: 'Are you sure you want delete?' } %>
  <% else %>
  <%= link_to "Buy", sneaker_orders_path(@sneaker), method: :post, data: { confirm: 'Are you sure you want to buy?' } %>
<% end %>
<br>
<br>
<p><%= link_to "Back", sneakers_path %></p>
